                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <RichTextBox 
                
                Grid.Column="0"
                x:Name="rtbConsole" 
                HorizontalAlignment="Stretch"  
                Margin="0,0,0,0" 
                VerticalAlignment="Stretch" 
                Background="Black" 
                Foreground="#FF42F326">


                <FlowDocument>
                    <Paragraph>
                        <Run  Text=""/>
                        <Line Height="10"/>
                    </Paragraph>
                </FlowDocument>
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
            <Button 
                
                x:Name="bLoadDataBase" 
                
                HorizontalAlignment="Stretch" 
                Grid.Column="1" 
                VerticalAlignment="Stretch" 
                Click="bLoadDataBase_Click" 
                IsEnabled="False" 
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center">
                <TextBlock Text="Wczytaj całą bazę danych" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
            <Button 
               
                x:Name="bSaveDataBase" 
                HorizontalAlignment="Stretch" 
                Grid.Column="2"
                VerticalAlignment="Stretch" 
                Click="bSaveDataBase_Click" 
                IsEnabled="false">
                <TextBlock Text="Zapisz bazę danych" TextAlignment="Center" TextWrapping="Wrap"/>
            </Button>
        </Grid>
        <Grid Grid.Column="1" 
              HorizontalAlignment="Stretch"  
              Margin="0,0,0,0" 
              Grid.Row="1" 
              VerticalAlignment="Stretch">
            <TextBox x:Name="tbProgressInfo" 
                     Text="{Binding ProgressInfo,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        </Grid>
    </Grid>


</Window>


